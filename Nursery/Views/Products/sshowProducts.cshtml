@model List<Nursery.Models.Item>
@{ 
    ViewData["Title"] = "showProducts";
}

    <section class="section-products">  
        <div class="container-fluid">

            @for(int i=0;i<Model.Count;i++)
            {
       
                <div class="row">
                    <div class="col-md-4">
                        <div class="card" style="width: 18rem;">
                            <img src="./assets/slideshow1.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@Model[i].ItemDescription</h5>
                                <p class="card-text">@Model[i].ItemCategory</p>
                                <a href="#" class="btn btn-primary">Add To Cart</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        @if ((i + 1) < Model.Count-1)
                        {
                        <div class="card" style="width: 18rem;">
                            <img src="./assets/slideshow1.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@Model[++i].ItemDescription</h5>
                                <p class="card-text">@Model[++i].ItemCategory</p>
                                <a href="#" class="btn btn-primary">Add To Cart</a>
                            </div>
                        </div>}
                    </div>
                    <div class="col-md-4">
                        @if ((i + 2) < Model.Count-2)
                        {
                            <div class="card" style="width: 18rem;">
                                <img src="./assets/slideshow1.jpg" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">@Model[++i].ItemDescription</h5>
                                    <p class="card-text">@Model[++i].ItemCategory</p>
                                    <a href="#" class="btn btn-primary">Add To Cart</a>
                                </div>
                            </div>}
                    </div>
                </div>
                
            }
        </div>
    </section>

